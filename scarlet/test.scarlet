

FIX isEven: E(a) (a % 2) == 0
FIX isOdd: E(a) isEven(a) == FALSE
FIX update: F(v, odds, evens, ^odds, ^evens) MATCH {
	[isOdd(v)] odds: odds + 1
	[TRUE] evens: evens + 1
}

f: F(numbers, ^odds, ^evens) {
	odds, evens: 0, 0

	LOOP i, v, m <- numbers {
		odds, evens: update(v, odds, evens)
	}
}

list: LIST {2,2,6,1,9,12}
odds, evens: f(list)
