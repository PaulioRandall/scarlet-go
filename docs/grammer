PROGRAM    := STATEMENT { STATEMENT } .
STATEMENT  := ( ASSIGNMENT | CALL | SPELL ) .
SPELL      := "@" CALL .
CALL       := ID PARAMS .
ASSIGNMENT := IDS ":=" FUNC .
FUNC       := "FUNC" PARAMS IDS BLOCK .
PARAMS     := "(" IDS ")" .
BLOCK      := "DO" { STATEMENT } "END" .
IDS        := ID { "," ID } .
ID         := LETTER { LETTER } .
LETTER     := * Unicode category L (letter) * .
