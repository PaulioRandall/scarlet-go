PROGRAM    := STATEMENT { STATEMENT } .
STATEMENT  := ( ASSIGNMENT | CALL | SPELL ) NEWLINE .
SPELL      := "@" CALL .
CALL       := ID "(" IDS ")" .
ASSIGNMENT := IDS ":=" FUNC .
FUNC       := "FUNC" "(" IDS ")" IDS BLOCK .
BLOCK      := "DO" NEWLINE { STATEMENT } "END" NEWLINE .
IDS        := ID { "," ID } .
ID         := LETTER { LETTER } .
LETTER     := * Unicode category L (letter) * .
NEWLINE    := * LF or CRLF * .
